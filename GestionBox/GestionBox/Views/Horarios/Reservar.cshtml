@model GestionBox.Models.Horario
@using Microsoft.AspNetCore.Identity
@inject UserManager<BoxUser> _userManager
@inject SignInManager<BoxUser> _signInManager

@{
    ViewData["Title"] = "Reservar";
}

<h1>Reservar Clase</h1>

<form asp-controller="BoxUserHorarios" asp-action="ValidarClase">
    <div>
        
        <dl class="row">
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Model.Clase.Nombre
            </dd>
            <dt class="col-sm-2">
                Descripcion
            </dt>
            <dd class="col-sm-10">
                @Model.Clase.Descripcion
            </dd>
            <dt class="col-sm-2">
                Tipo
            </dt>
            <dd class="col-sm-10">
                @Model.Clase.Tipo
            </dd>
            <dt class="col-sm-2">
                Imagen
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.Clase.Imagen" alt="@Model.Clase.Nombre" />
            </dd>
            <dt class="col-sm-2">
                Hora
            </dt>
            <dd class="col-sm-10">
                @Model.Hora"
            </dd>


        </dl>
    </div>

    <input type="hidden" value="@Model.Id" asp-for="Id" />
    <input type="submit" id="BotonConfirmar" value="Confirmar Reserva" />
</form>
<div>
    <a asp-controller="Clases" asp-action="Edit" asp-route-id="@Model.Clase.Id">Editar</a> |
    <a asp-controller="Clases" asp-action="Index">Volver a Clases</a>
</div>
