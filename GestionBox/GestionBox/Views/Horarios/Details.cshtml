@model GestionBox.Models.Horario

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            Dia:
        </dt>
        <dd class = "col-sm-10">
            @Model.Dia
        </dd>
        <dt class = "col-sm-2">
            Hora:
        </dt>
        <dd class = "col-sm-10">
            @Model.Hora
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver a la Lista Horarios</a>
</div>
