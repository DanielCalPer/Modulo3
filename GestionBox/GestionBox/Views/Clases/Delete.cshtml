@model GestionBox.Models.Clase

@{
    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>Seguro que quieres borrar esto?</h3>
<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre:
        </dt>
        <dd class = "col-sm-10">
            @Model.Nombre
        </dd>
        <dt class = "col-sm-2">
            Descripcion:
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>
        <dt class = "col-sm-2">
            Tipo:
        </dt>
        <dd class="col-sm-10">
            @Model.Tipo
        </dd>
        <dt class = "col-sm-2">
            Imagen:
        </dt>
        <dd class="ImagenMisclases col-sm-10">
            <img src="@Model.Imagen" alt="@Model.Nombre" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la Lista Clases</a>
    </form>
</div>
