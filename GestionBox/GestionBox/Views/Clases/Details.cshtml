@model GestionBox.Models.Clase

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>

    <dl class="row">
        <dt class="col-sm-2">
            Id Clase:
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Nombre:
        </dt>
        <dd class="col-sm-10">
            @Model.Nombre
        </dd>
        <dt class="col-sm-2">
            Descripcion:
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>
        <dt class="col-sm-2">
            Tipo:
        </dt>
        <dd class="col-sm-10">
            @Model.Tipo
        </dd>
        <dt class="col-sm-2">
            Imagen:
        </dt>
        <dd class="ImagenMisclases col-sm-10">
            <img src="@Model.Imagen" alt="@Model.Nombre" />
        </dd>
    </dl>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
        <a asp-action="Index">Volver a la Lista Clases</a>
    </div>
</div>

